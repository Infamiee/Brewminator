<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:context=".AbvCalculatorActivity">
    <include layout="@layout/toolbar"/>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/fg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="102dp"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:layout_below="@+id/textog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/og"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:layout_below="@+id/result"
                />


            <TextView
                android:id="@+id/textog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/og"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif"
                android:labelFor="@+id/og"
                android:text="@string/og"
                android:textColor="#000000"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/textfg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fg"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:labelFor="@+id/fg"
                android:text="@string/fg"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textfg"
                android:layout_marginStart="156dp"
                android:layout_marginTop="60dp"
                android:text="@string/calculate"
                app:layout_constraintBottom_toTopOf="@+id/textfg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>